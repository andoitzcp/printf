#include "ft_printf.h"

char	*ft_itoh(unsigned long n)
{
	unsigned int	len;
	unsigned long	tmp;
	char			*hex;
	char			*base;

	len = 0;
	tmp = n;
	while (tmp > 0)
	{
		tmp /= 16;
		len++;
	}
	hex = (char *)ft_calloc(len + 1, sizeof(char));
	base = ft_strdup("0123456789abcdefg");
	tmp = n;
	while (len > 0)
	{
		hex[len - 1] = base[tmp % 16];
		tmp /= 16;
		len--;
	}
	free(base);
	return(hex);
}

void	ft_putptr(void *ptr)
{
	char	*ptr_str;
	char	*aux;

	ptr_str = NULL;
	if (!ptr)
		ptr_str = ft_strdup("(nil)");
	else
	{
		aux= ft_itoh((unsigned long) ptr);
		ptr_str = ft_strjoin("0x", aux);
		free(aux);
	}
	ft_putstr(ptr_str);
	free(ptr_str);
}
