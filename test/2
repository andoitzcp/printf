#include "ft_printf.h"

static char *ft_stralloc(long n)
{
	unsigned int	len;

	len = 0;
	if (n < 0)
	{
		len++;
		n *= -1;
	}
	while (n > 0)
	{
		n /= 10;
		len++;
	}
	return ((char *)ft_calloc(len + 1, sizeof(char)));
}

static char	*ft_itos(long n)
{
	unsigned int	len;
	long			tmp;
	char			*dec;
	char			*base;

	len = 0;
	tmp = n;
	while (tmp != 0)
	{
		tmp /= 10;
		len++;
	}
	dec = ft_stralloc(n); 
	base = ft_strdup("0123456789");
	tmp = n;
	printf("len:%d\n", len);
	while (len > 0)
	{
		dec[len - 1] = base[tmp % 10];
		tmp /= 10;
		len--;
	}
	free(base);
	printf("str:%s\n", dec);
	return (dec);
	
}

size_t	ft_putint(int n)
{
	char	*int_str;
	size_t	len;

	int_str = ft_itos(n);
	len = ft_putstr(int_str);
	free(int_str);
	return (len);
}

size_t	ft_putdec(int n)
{
	char	*int_str;
	size_t	len;

	int_str = ft_itos(n);
	len = ft_putstr(int_str);
	free(int_str);
	return (len);
}

size_t	ft_putuni(unsigned int n)
{
	char	*int_str;
	size_t	len;

	int_str = ft_itos(n);
	len = ft_putstr(int_str);
	free(int_str);
	return (len);
}
